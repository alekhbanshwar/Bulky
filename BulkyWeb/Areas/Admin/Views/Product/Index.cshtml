@model List<Product>

@{
    ViewData["Title"] = "Index";
}
<div class="card shadow border-0 mt-4" style="margin-bottom:70px;">
    <div class="card-header bg-secondary ml-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-2">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-secondary">
                    <i class="fa-solid fa-circle-plus"></i> Create New Product
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>Title </th>
                    <th>ISBN </th>
                    <th> Price</th>
                    <th>Author </th>
                    <th>Category </th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
</div>
@section Scripts {
    <script src="~/js/product.js"></script>
}
<partial name="Notification" />
