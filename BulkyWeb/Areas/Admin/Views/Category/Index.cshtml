@model List<Category>

@{
    ViewData["Title"] = "Index";
}
<div class="card shadow  border-0 mt-4">
    <div class="card-header bg-secondary ml-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4"> 
        <div class="row pb-2">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-secondary">
                    <i class="fa-solid fa-circle-plus"></i> Create New Category
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">
                        Category  Name
                    </th>
                    <th scope="col">
                        DisplayOrder
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DisplayOrder)
                            </td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Category_Id" class="btn btn-secondary"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Category_Id" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Delete </a>
                                </div>
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <tr>
                        <td colspan="2">Data Not Found</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<partial name="Notification" />
